<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/pastorders_image_cardItem"
        android:layout_width="81dp"
        android:layout_height="171dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/pastorders_textView_date_cardItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/past_order"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/pastorders_textView_name_cardItem"
        android:layout_width="187dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="11dp"
        android:text="Your order is delivered"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pastorders_image_cardItem"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pastorders_textView_date_cardItem"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_margin="5dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Date"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pastorders_image_cardItem"
        app:layout_constraintTop_toBottomOf="@+id/pastorders_textView_name_cardItem" />


    <TextView
        android:id="@+id/pastorders_textView_time_cardItem"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:text="Time"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pastorders_textView_date_cardItem"
        app:layout_constraintTop_toBottomOf="@+id/pastorders_textView_name_cardItem" />

    <TextView
        android:id="@+id/textView_totalPrice_pastorder"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:text="Total Price"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pastorders_image_cardItem"
        app:layout_constraintTop_toBottomOf="@+id/textView_pastcardName" />

    <TextView
        android:id="@+id/textView_pastaddress"
        android:layout_width="250dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pastorders_image_cardItem"
        app:layout_constraintTop_toBottomOf="@+id/pastorders_textView_time_cardItem" />

    <TextView
        android:id="@+id/textView_pastcardName"
        android:layout_width="250dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="Card Name"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/pastorders_image_cardItem"
        app:layout_constraintTop_toBottomOf="@+id/textView_pastaddress" />


</androidx.constraintlayout.widget.ConstraintLayout>